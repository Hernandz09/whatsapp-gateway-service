{
  "compilerOptions": {
    /* Opciones del Proyecto */
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "outDir": "./dist",
    "rootDir": "./src",

    /* Opciones Estrictas */
    "strict": true,

    /* Opciones de MÃ³dulos */
    "esModuleInterop": true,

    /* Opciones Avanzadas */
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*"] // Solo compilar archivos dentro de la carpeta src
}
